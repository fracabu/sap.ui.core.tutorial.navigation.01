<mvc:View
	controllerName="sap.ui.demo.nav.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
>
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">

		<Panel expandable="true" expanded="false" headerText="GENERAL DATA"
			class="sapUiResponsiveContentPadding" width="auto">
			<content>


				<!-- ColumnListItem con input e label -->
				<List>
					<items>

						<CustomListItem>

							<HBox>
								<VBox>
									<FlexBox direction="Column" alignItems="Start"
										class="sapUiSmallMargin">
										<VBox>
											<Title text="Project Details" />
										</VBox>
										<Label text="Opportunity number" />
										<Input editable="false" />
										<Label text="Project number" />
										<Input editable="false" />
										<Label text="Project name" />
										<Input />
										<Label text="File Type" />
										<Input />
										<Label text="Sales Employee" />
										<Input />
										<Label text="Coordinator" />
										<Input />
										<Label text="Company code" />
										<Input editable="false" />
										<Label text="Plant" />
										<Input editable="false" />
									</FlexBox>
								</VBox>

								<VBox>
									<FlexBox direction="Column" alignItems="Start"
										class="sapUiSmallMargin">
										<VBox>
											<Title text="Basic Data" />
										</VBox>
										<Label text="Customer name" />
										<Input editable="true" />
										<Label text="Account" />
										<Input editable="true" />
										<Label text="Booking Agent" />
										<Input editable="true" />
										<Label text="Bill to 1" />
										<Input editable="true" />
										<Label text="Bill to 2" />
										<Input editable="true" />
										<Label text="Bill to 3" />
										<Input editable="true" />
									</FlexBox>
								</VBox>

								<VBox>
									<FlexBox direction="Column" alignItems="Start"
										class="sapUiSmallMargin">
										<VBox>
											<Title text="Addresses" />
										</VBox>
										<Label text="Origin 1" />
										<Input editable="true" />
										<Label text="Origin 2" />
										<Input editable="true" />
										<Label text="Origin 3" />
										<Input editable="true" />

									</FlexBox>
								</VBox>

								<VBox>
									<FlexBox direction="Column" alignItems="Start"
										class="sapUiSmallMargin">
										<VBox>
											<Title text="Destination" />
										</VBox>
										<Label text="Destination 1" />
										<Input editable="true" />
										<Label text="Destination 2" />
										<Input editable="true" />
										<Label text="Destination 3" />
										<Input editable="true" />

									</FlexBox>
								</VBox>

								<VBox>
									<FlexBox direction="Column" alignItems="Start"
										class="sapUiSmallMargin" >
										<VBox>
											<Title text="Technical Details" />
										</VBox>
										<HBox >
											<Label text="Allowance"/>
											<Input editable="true" width="70%" />
											<Input editable="true" width="30%" />
										</HBox>
										<HBox>
											<Label text="Tolerance" />
											<Input editable="true" width="70%" />
											<Input editable="true" width="30%" />
										</HBox>
										<HBox>
											<Label text="Tolerance" />
											<Input editable="true" width="70%" />
											<Input editable="true" width="30%" />
										</HBox>
										<HBox>
										<Label text="Tolerance" />
										<CheckBox text="Option a" selected="true" />
										</HBox>
										<HBox>
										<Label text="Tolerance" />
										<CheckBox text="Option a" selected="true" />
										</HBox>


									</FlexBox>
								</VBox>

							</HBox>
						</CustomListItem>

					</items>
				</List>


				<!-- To do list subsection -->
				<Table>
					<headerToolbar>
						<Toolbar>
							<Title text="TO DO LIST" />
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="To do date" />
						</Column>
						<Column>
							<Text text="To do notes" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Input value="{path: '/progetto1/colonna1'}" width="30%" />
								<TextArea width="70%">
								</TextArea>

							</cells>
						</ColumnListItem>
					</items>
				</Table>

			</content>
		</Panel>

		<Panel expandable="true" expanded="false" headerText="SERVICES">
			<content>
				<Table>
					<headerToolbar>
						<Toolbar>
							<Title text="SERVICES" />
						</Toolbar>
					</headerToolbar>

					<columns>
						<Column>
							<Text text="Colonna 1" />
						</Column>
						<Column>
							<Text text="Colonna 2" />
						</Column>
						<Column>
							<Text text="Colonna 3" />
						</Column>
						<Column>
							<Text text="Colonna 4" />
						</Column>
						<Column>
							<Text text="Colonna 5" />
						</Column>
					</columns>

					<items>
						<ColumnListItem>
							<cells>
								<Input value="{path: '/progetto1/colonna1'}" />
								<Input value="{path: '/progetto1/colonna2'}" />
								<Input value="{path: '/progetto1/colonna3'}" />
								<Input value="{path: '/progetto1/colonna4'}" />
								<Input value="{path: '/progetto1/colonna5'}" />
							</cells>
						</ColumnListItem>
						<ColumnListItem>
							<cells>
								<Input value="{path: '/progetto2/colonna1'}" />
								<Input value="{path: '/progetto2/colonna2'}" />
								<Input value="{path: '/progetto2/colonna3'}" />
								<Input value="{path: '/progetto2/colonna4'}" />
								<Input value="{path: '/progetto2/colonna5'}" />
							</cells>
						</ColumnListItem>
						<!-- Repetere il blocco di codice precedente per ogni progetto -->
					</items>
				</Table>
			</content>
		</Panel>

		<Panel expandable="true" expanded="false" headerText="LOCATION">
			<content>
				<Table>
					<headerToolbar>
						<Toolbar>
							<Title text="LOCATION" />
						</Toolbar>
					</headerToolbar>

					<columns>
						<Column>
							<Text text="Colonna 1" />
						</Column>
						<Column>
							<Text text="Colonna 2" />
						</Column>
						<Column>
							<Text text="Colonna 3" />
						</Column>
						<Column>
							<Text text="Colonna 4" />
						</Column>
						<Column>
							<Text text="Colonna 5" />
						</Column>
					</columns>

					<items>
						<ColumnListItem>
							<cells>
								<Input value="{path: '/progetto1/colonna1'}" />
								<Input value="{path: '/progetto1/colonna2'}" />
								<Input value="{path: '/progetto1/colonna3'}" />
								<Input value="{path: '/progetto1/colonna4'}" />
								<Input value="{path: '/progetto1/colonna5'}" />
							</cells>
						</ColumnListItem>
						<ColumnListItem>
							<cells>
								<Input value="{path: '/progetto2/colonna1'}" />
								<Input value="{path: '/progetto2/colonna2'}" />
								<Input value="{path: '/progetto2/colonna3'}" />
								<Input value="{path: '/progetto2/colonna4'}" />
								<Input value="{path: '/progetto2/colonna5'}" />
							</cells>
						</ColumnListItem>
						<!-- Repetere il blocco di codice precedente per ogni progetto -->
					</items>
				</Table>
			</content>
		</Panel>

		<!-- Button nav -->
		<content>
			<Button id="displayNotFoundBtn" text="{i18n>DisplayNotFound}" press=".onDisplayNotFound"
				class="sapUiTinyMarginEnd" />
			<Button id="employeeListBtn" text="{i18n>ShowEmployeeList}" press=".onNavToEmployees"
				class="sapUiTinyMarginEnd" />
			<Button id="projectListBtn" text="{i18n>ShowProjectList}" press=".onNavToProject"
				class="sapUiTinyMarginEnd" />

		</content>
	</Page>
</mvc:View>